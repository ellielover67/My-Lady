        <div class="message" id="typewriter"></div>
        <p class="from">‚Äî Always, Yusuf</p>
        <button class="btn" onclick="burst()">Send Love</button>
    </div>

    <script>
        // Typewriter Effect
        const text = "Happy Valentine's Day! I made this little corner of the internet just for you.";
        let i = 0;
        function type() {
            if (i < text.length) {
                document.getElementById("typewriter").innerHTML += text.charAt(i);
                i++;
                setTimeout(type, 50);
            }
        }
        window.onload = type;

        // Heart Burst Function
        function burst() {
            for(let i=0; i<15; i++) {
                setTimeout(createHeart, i * 100);
            }
        }

        function createHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart');
            heart.innerHTML = ['‚ù§Ô∏è', 'üíñ', '‚ú®', 'üåπ'][Math.floor(Math.random() * 4)];
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.bottom = "-5vh";
            heart.style.fontSize = (Math.random() * 20 + 20) + 'px';
            heart.style.duration = (Math.random() * 2 + 3) + 's';
            document.body.appendChild(heart);
            setTimeout(() => heart.remove(), 4000);
        }

        setInterval(createHeart, 800);
    </script>
